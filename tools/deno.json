{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true
	},
	"lint": {
		"files": {
			"include": ["TODO/*.js"],
			"exclude": ["www/wildtype/", "www/external/"]
		},
		"rules": {
			"tags": ["recommended"],
			"include": ["no-irregular-whitespace"],
			"exclude": ["no-unused-vars", "require-await", "no-extra-semi"]
		}
	},
	"fmt": {
		"files": {
			"exclude": ["./", "*"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	}
}
